<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.life.mapper.LifeConfigMapper">
    
    <resultMap type="LifeConfig" id="LifeConfigResult">
        <result property="id"    column="id"    />
        <result property="name"    column="name"    />
        <result property="config"    column="config"    />
    </resultMap>

    <sql id="selectLifeConfigVo">
        select id, name, config from life_config
    </sql>

    <select id="selectLifeConfigList" parameterType="LifeConfig" resultMap="LifeConfigResult">
        <include refid="selectLifeConfigVo"/>
        <where>  
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="config != null  and config != ''"> and config = #{config}</if>
        </where>
    </select>
    
    <select id="selectLifeConfigById" parameterType="Long" resultMap="LifeConfigResult">
        <include refid="selectLifeConfigVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertLifeConfig" parameterType="LifeConfig" useGeneratedKeys="true" keyProperty="id">
        insert into life_config
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null  and name != ''">name,</if>
            <if test="config != null  and config != ''">config,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="name != null  and name != ''">#{name},</if>
            <if test="config != null  and config != ''">#{config},</if>
         </trim>
    </insert>

    <update id="updateLifeConfig" parameterType="LifeConfig">
        update life_config
        <trim prefix="SET" suffixOverrides=",">
            <if test="config != null  and config != ''">config = #{config},</if>
        </trim>
        where name = #{name}
    </update>

    <delete id="deleteLifeConfigById" parameterType="Long">
        delete from life_config where id = #{id}
    </delete>

    <delete id="deleteLifeConfigByIds" parameterType="String">
        delete from life_config where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
    
</mapper>